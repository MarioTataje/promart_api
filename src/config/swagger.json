{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Promart Challenge API",
        "description": "API de Promart"
    },
    "host": "https://2y52usubzj.execute-api.us-east-1.amazonaws.com",
    "basePath": "/",
    "tags": [
      {
        "name": "Clients",
        "description": "Operaciones de los clientes"
      }
    ],
    "schemes": [
      "https"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/listclientes": {
        "get": {
          "tags": [
            "Clients"
          ],
          "summary": "Obtener los clientes guardados",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/ClientResponses"
              }
            }
          }
        }
      },
      "/creacliente": {
        "post": {
          "tags": [
            "Clients"
          ],
          "description": "Guardar un cliente",
          "parameters": [
            {
              "name": "client",
              "in": "body",
              "description": "Datos del cliente que se desea crear",
              "schema": {
                "$ref": "#/definitions/ClientRequest"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "201": {
              "description": "Un cliente fue creado",
              "schema": {
                "$ref": "#/definitions/ClientResponse"
              }
            }
          }
        }
      },
      "/kpideclientes": {
        "get": {
          "tags": [
            "Clients"
          ],
          "summary": "Obtener el kpi de los clientes",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/KPI"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "ClientRequest": {
        "required": [
          "nombre",
          "apellido",
          "edad",
          "fecha_nacimiento"
        ],
        "properties": {
          "nombre": {
            "type": "string"
          },
          "apellido": {
            "type": "string"
          },
          "edad": {
            "type": "number"
          },
          "fecha_nacimiento": {
            "type": "string"
          }
        }
      },
      "ClientResponse": {
        "properties": {
          "id": {
            "type": "string",
            "uniqueItems": true
          },
          "nombre": {
            "type": "string"
          },
          "apellido": {
            "type": "string"
          },
          "edad": {
            "type": "number"
          },
          "fecha_nacimiento": {
            "type": "string"
          },
          "fecha_probable_muerte": {
            "type": "string"
          }
        }
      },
      "ClientResponses": {
        "type": "array",
        "$ref": "#/definitions/ClientResponse"
      },
      "KPI": {
        "properties": {
          "promedio_edad": {
            "type": "number"
          },
          "desviacion_estandar": {
            "type": "number"
          }
        }
      },
      "Message": {
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
